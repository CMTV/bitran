{
    "type": "module",
    "name": "bitran",
    "version": "2.0.1",
    "description": "A highly customizable text parser.",
    "keywords": [
        "parser",
        "parse",
        "text"
    ],
    "license": "MIT",
    "repository": "CMTV/bitran",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "test":     "bun test",
        "prepare":  "bun run examples && bun run build",
        "examples": "bun examples/index.ts",
        "clean":    "bun x rimraf dist",
        "build":    "bun run clean && bun build src/index.ts --outdir ./dist --external yaml --minify && tsc --project tsconfig.prod.json"
    },
    "dependencies": {
        "yaml": "^2.4.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "bun": "^1.1.3",
        "typescript": "^5.4.3"
    }
}
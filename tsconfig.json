    "compilerOptions":
    {
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,

        "baseUrl": "./",
        "rootDir": "src",

        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",

        "outDir": "dist",
        "declaration": true
    },

    "include": ["src/**/*"]
}